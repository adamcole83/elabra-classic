<?php

class MySQLDatabase {
	
	private $connection;
	public $last_query;
	private $magic_quotes_active;
	private $real_escape_string_exists;
	
	private $DB_SERVER = "localhost";
	private $DB_NAME = "cms";
	private $DB_USER = "root";
	private $DB_PASS = "sqlp4ss!";
	
	//Open database connection
	function __construct() {		//Automatically opens connection when new
		$this->open_connection();
		$this->magic_quotes_active = get_magic_quotes_gpc();
		$this->real_escape_string_exists = function_exists("mysql_real_escape_string");
	}
	public function open_connection($dbname='') {
		$dbname = (!empty($dbname)) ? $dbname : $this->DB_NAME;
		$this->connection = mysql_connect($this->DB_SERVER, $this->DB_USER, $this->DB_PASS);
		if(!$this->connection) {
			die("Database connection failed: " . mysql_error());
		}else {
			$db_select = mysql_select_db($dbname, $this->connection);
			if(!$db_select){
				die("Database selection failed: " . mysql_error());
			}
		}
	}
	
	//Close database connection
	public function close_connection() {
		if(isset($this->connection)) {
			mysql_close($this->connection);
			unset($this->connection);
		}
	}
	
	//Reset connection after using diff table
	public function reset_connection(){
		$this->close_connection();
		$this->open_connection($DB_NAME);
	}
	
	//Query the database
	public function query($sql) {
		$this->last_query = $sql;
		$result = mysql_query($sql, $this->connection);
		$this->confirm_query($result);
		return $result;
	}
	
	//MySQL Prep - Prepares values for submission to SQL
	public function escape_value($value) {
		if($this->real_escape_string_exists) { //PHP v4.3.0 or higher
			//undo any magic quote effects so mysql_real_escape_string can do the work
			if($this->magic_quotes_active) { $value = stripslashes($value); }
			$value = mysql_real_escape_string($value);
		}else {  //Before PHP v4.3.0
			//if magic quotes aren't already on then add slashes manually
			if(!$this->magic_quotes_active) { $value = addslashes($value); }
			//if magic quotes are active, then the slashes already exist
		}
		return $value;
	}
	
	// "database-neutral" methods
	
	//Declare a fetch array for database
	public function fetch_array($result_set) {
		return mysql_fetch_array($result_set);
	}
	
	//Get number of rows
	public function num_rows($result_set) {
		return mysql_num_rows($result_set);
	}
	
	//Get last id inserted over the current db connection
	public function insert_id() {
		return mysql_insert_id($this->connection);
	}
	
	//Affected rows
	public function affected_rows() {
		return mysql_affected_rows($this->connection);
	}
	
	// get database name
	public function getDBName()
	{
		return $DB_NAME;
	}
	
	//Confirm Query
	private function confirm_query($result) {
		if(!$result) {
			$output = "Database query failed: " . mysql_error() . "<br /><br />";
			$output .= "Last SQL query: " . $this->last_query;
			die($output);
		}
	}
}

$database = new MySQLDatabase();
$db =& $database;	// Reference for using either db or database

?>